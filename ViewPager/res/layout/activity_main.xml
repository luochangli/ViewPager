<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bvp="http://schemas.android.com/apk/res-auto"
    style="@style/match_match_vertical" >

    <cn.bingoogol.viewpager.ui.view.BingoViewPagerTimer
        android:id="@+id/bvp_main_pagertimer"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        bvp:pointAutoPlayAble="true"
        bvp:pointAutoPlayInterval="3000"
        bvp:pointContainerBackground="#200a"
        bvp:pointContainerHeight="@dimen/size_large_large"
        bvp:pointContainerWidth="match_parent"
        bvp:pointEdgeSpacing="@dimen/size_middle"
        bvp:pointFocusedImg="@drawable/point_focused"
        bvp:pointGravity="bottom|center_horizontal"
        bvp:pointSpacing="@dimen/size_small"
        bvp:pointUnfocusedImg="@drawable/point_unfocused"
        bvp:pointVisibility="true" />

    <cn.bingoogol.viewpager.ui.view.BingoViewPagerExecutor
        android:id="@+id/bvp_main_pagerexecutor1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/size_large"
        bvp:pointAutoPlayAble="true"
        bvp:pointAutoPlayInterval="3000"
        bvp:pointContainerBackground="#4000"
        bvp:pointContainerHeight="@dimen/size_large_large"
        bvp:pointContainerWidth="match_parent"
        bvp:pointEdgeSpacing="@dimen/size_middle"
        bvp:pointFocusedImg="@drawable/point_focused"
        bvp:pointGravity="top|right"
        bvp:pointSpacing="@dimen/size_small"
        bvp:pointUnfocusedImg="@drawable/point_unfocused"
        bvp:pointVisibility="true" />

    <cn.bingoogol.viewpager.ui.view.BingoViewPagerExecutor
        android:id="@+id/bvp_main_pagerexecutor2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/size_large"
        bvp:pointAutoPlayAble="true"
        bvp:pointAutoPlayInterval="3000"
        bvp:pointContainerBackground="#4000"
        bvp:pointContainerHeight="@dimen/size_large_large"
        bvp:pointContainerWidth="match_parent"
        bvp:pointEdgeSpacing="@dimen/size_middle"
        bvp:pointFocusedImg="@drawable/point_focused"
        bvp:pointGravity="bottom|center_horizontal"
        bvp:pointSpacing="@dimen/size_small"
        bvp:pointUnfocusedImg="@drawable/point_unfocused"
        bvp:pointVisibility="true" />

</LinearLayout>